<style>
    input {
        transition: .5s;
        border-bottom: 2px solid transparent;
        width: 100%;
        background: none;
    }
    input:focus {
        border-color: white;
    }
    .comment_box_btn.active {
        display: block;
    }
</style>
<div class="flex w-full gap-3" style="padding: 10px;">
    <img class="w-[45px] h-[45px] rounded-full" src="<%= user.logoURL %>" alt="">
    <form action="/watch/<%= video._id %>/comment" method="post" class="w-full flex flex-col items-end">
        <input type="text" style="padding: 10px;" class="input_text outline-none" name="comment" placeholder="Add Comment">
        <div class="comment_box_btn hidden flex gap-3" style="margin-top: 10px;">
            <button type="button" class="cencel_comment rounded-full hover:bg-zinc-800 cursor-pointer" style="padding: 8px 15px;" type="submit">Cencel</button>
            <button type="submit" class="bg-blue-500 rounded-full hover:bg-blue-700 cursor-pointer" style="padding: 8px 15px;" type="button">Comment</button>
        </div>
    </form>
</div>
<script>
  document.querySelector('.input_text').addEventListener('focus', () => {
    document.querySelector('.comment_box_btn').classList.remove('hidden');
  });
  document.querySelector('.cencel_comment').addEventListener('click', () => {
    document.querySelector('.comment_box_btn').classList.add('hidden');
  })
</script>