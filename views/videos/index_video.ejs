<style>
    @media (max-width:800px) {
        h1 {
            font-size: 15px;
        }
        .video_details_p, .video_details_span {
            font-size: 10px;
            line-height: 0;
        }
    }
    @media (max-width:600px) {
        h1 {
            font-size: 12px;
            padding-bottom: 10px;
        }
        .video_details_p, .video_details_span {
            font-size: 8px;
            margin-top: 0;
        }
    }
</style>
<a href="/watch/<%= item._id %>" class="index_video flex flex-col">
    <video class="h-[250] w-full object-cover rounded-lg" src="../videos/<%= item.filename %>"></video>
    <div class="flex items-start gap-3" style="padding: 0 10px;margin-top: 10px;">
        <img class="w-[45px] rounded-full h-[45px]" src="<%= item.channel.logoURL %>" alt="">
        <div>
            <h1 class="index_video_title w-full"><%= item.title %></h1>
            <div class="channel_info">
                <p class="video_details_p text-zinc-400 text-sm" style="color: #979797;"><%= item.channel.name %></p>
                <span class="video_details_span text-xs" style="margin-top: 5px;color: #979797;"><%= item.viewsCount.length %> views â€¢ <%= getTimestamp(item.createdAt) %></span>
            </div>
        </div>
    </div>
</a>

<script>
    document.querySelectorAll('.index_video_title').forEach((h1) => {
        if(h1.innerText.length > 80) {
            h1.innerText = h1.innerText.substring(0, 80) + '...';
        }
    })
</script>