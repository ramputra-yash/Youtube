<style>
.channel_link .hover_on_img {
    opacity: 0;
    visibility: hidden;
}
.channel_link:hover .hover_on_img {
    opacity: 1;
    visibility: visible;
}
.menu_list_1 a.active {
    border-left: 5px solid #3B82F6;
    background: #2D2D30;
}
</style>
<div class="studio_sidebar border-r-2 border-zinc-600 w-[250px] flex flex-col gap-4  h-screen" style="padding-top: 90px;">
    <div class="flex flex-col items-center justify-center">
        <a href="/channel/<%= user.handle %>" class="channel_link relative">
            <img class="w-[110px] h-[110px] object-cover rounded-full mb-2" src="<%= user.logoURL %>" alt="">
            <div class="hover_on_img top-0 absolute w-[110px] h-[110px] rounded-full flex items-center justify-center bg-zinc-800/50">
                <i class="ri-share-circle-fill text-3xl"></i>
            </div>
        </a>
        <h1 class="text-xs">Your Channel</h1>
        <p class="text-sm text-zinc-400"><%= user.name %></p>
    </div>
    <div class="menu_lists flex justify-between flex-col p-2 w-full h-full">
        <div class="menu_list_1 flex flex-col gap-2">
        <a href="/studio/channel/<%= user.handle %>" class="dashboard menu_list hover:bg-zinc-700/50 hover:border-l-[5px] border-blue-500 transition-[.5s] p-2 px-4 flex gap-2 cursor-pointer">
            <i class="ri-dashboard-fill"></i>
            <span>
                Dashboard
            </span>
        </a>
        <a href="/studio/channel/<%= user.handle %>/content" class="content menu_list hover:bg-zinc-700/50 hover:border-l-[5px] border-blue-500 transition-[.5s] p-2 px-4 flex gap-2 cursor-pointer">
            <i class="ri-file-video-fill"></i>
            <span>
                Content
            </span>
        </a>
        <a href="/studio/channel/<%= user.handle %>/customization " class="customization menu_list hover:bg-zinc-700/50 hover:border-l-[5px] border-blue-500 transition-[.5s] p-2 px-4 flex gap-2 cursor-pointer">
            <i class="ri-edit-2-fill"></i>
            <span>
                Customization
            </span>
        </a>
    </div>
    <div class="flex flex-col gap-2">
        <a href="/logout" class="menu_list hover:border-red-500 hover:border-l-[5px] transition-all p-2 px-4 flex gap-2 cursor-pointer">
            <i class="ri-settings-3-line"></i>
            Logout
        </a>
        <a href="/setting" class="menu_list hover:border-green-600 hover:border-l-[5px] transition-all p-2 px-4 flex gap-2 cursor-pointer">
            <i class="ri-settings-3-line"></i>
            Setting
        </a>
    </div>
</div>
</div>
<script>

    let userHandle = "<%= user.handle %>";

    let url = `http://localhost:3000/studio/channel/${userHandle}`;

    if(window.location.href === `${url}`) {
        document.querySelector(".dashboard").classList.add('active')
    } else if(window.location.href === `${url}/content`) {
        document.querySelector(".content").classList.add('active')
    } else if(window.location.href === `${url}/customization`) {
        document.querySelector(".customization").classList.add('active')
    }
</script>